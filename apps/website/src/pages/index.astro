---
import { Picture } from '@astrojs/image/components';

import Footer from '@/components/Footer.astro';
import Socials from '@/components/Socials.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '@/config';
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <main class="grow">
    <div class="mt-12 flex flex-wrap items-start gap-8 sm:mt-[22%] sm:gap-16">
      <Picture
        src={import('public/userpic.jpg')}
        widths={[288, 416]}
        sizes="(max-width: 640px) 144px, 208px"
        aspectRatio="1:1"
        class="shrink-0 aspect-square box-content rounded-full border border-gray-600 w-36 sm:w-52"
        alt=""
      />
      <div class="mt-4 w-min min-w-[16rem] grow [&>p]:text-lg">
        <p>
          <span class="mr-2 text-2xl">ðŸ‘‹</span> I'm Nazar, a Javascript software engineer that focuses
          on front end tools such as React and Typescript.
        </p>
        <p class="mt-4">
          My area of expertise is React ecosystem, but I also have experience in backend
          software development.
        </p>
        <Socials class="mt-4" />
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>
