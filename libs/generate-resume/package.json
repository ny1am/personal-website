{
  "name": "generate-resume",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "ts-node --esm src/index.ts",
    "validate": "resumed validate public/resume.json",
    "lint": "eslint src/**/*"
  },
  "dependencies": {
    "@pw/resume-theme": "workspace:resume-theme@*"
  },
  "nx": {
    "implicitDependencies": ["resume-theme"],
    "targets": {
      "build": {
        "outputs": ["{workspaceRoot}/apps/website/public/resume.pdf"],
        "dependsOn": ["validate"]
      }
    }
  }
}
